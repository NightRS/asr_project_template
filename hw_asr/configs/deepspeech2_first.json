{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 128
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": [
        {
         "type": "RandomFrequencyMasking",
         "args": {
           "p": 0.1,
           "max_length": 20
         }
       },
      {
         "type": "RandomTimeMasking",
         "args": {
           "p": 0.1,
           "max_length": 10
         }
       }
    ]
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "fc_hidden": 256
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "OracleWERMetric",
      "args": {
        "name": "WER (oracle)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam search)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "OracleCERMetric",
      "args": {
        "name": "CER (oracle)"
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam search)"
      }
    }
  ],
  "trainer": {
    "epochs": 30,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 300,
    "grad_norm_clip": 10
  }
}
